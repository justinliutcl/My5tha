<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DIndividualActivity.Order.OrderselectActivity"
    android:orientation="vertical"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x20"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back3x" />

        <TextView
            android:id="@+id/orderselect_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单搜索"
            android:textSize="@dimen/x15"
            android:textColor="#444"
            android:paddingTop="@dimen/x3"
            android:paddingBottom="@dimen/x2"
            android:visibility="visible"
            />
        <EditText
            android:id="@+id/orderselect_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/x4"
            android:background="@drawable/grayandwhite_noricepe"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/x13"
            android:textColorHint="@color/main_sgry"
            android:textColor="@color/individualblack"
            android:hint="请输入订单关键词"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/orderselect_search"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x22"
            android:layout_marginRight="5dp"
            android:text=""
            android:gravity="center"
            android:textColor="#444"
            android:textSize="@dimen/x10"
            android:background="@drawable/icon_searchblack"

            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/orderselect_listview"
            android:cacheColorHint="#00000000"
            android:background="#f5f5f5"
            android:divider="#f5f5f5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="@dimen/y5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/myorder_ordernone"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="@dimen/x65"
                android:layout_height="@dimen/x75"
                android:background="@drawable/order_none"
                android:layout_marginTop="@dimen/x175"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抱歉，您还没有相关订单"
                android:textSize="@dimen/x13"
                android:textColor="@color/main_sgry"
                android:layout_marginTop="@dimen/x15"
                />
        </LinearLayout>
        <customUI.Loding.ProgressWheel
            android:id="@+id/progress"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y4"
            android:clickable="false"
            android:layout_centerInParent="true"
            wheel:matProg_barColor="#f32d61"
            wheel:matProg_progressIndeterminate="true"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>
