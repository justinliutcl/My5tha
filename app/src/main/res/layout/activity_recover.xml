<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DIndividualActivity.Order.RecoverActivity"
    android:orientation="vertical"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:topbar="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    >
    <customUI.TopbarView
        android:id="@+id/topbar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        topbar:medtitle="回收站"
        topbar:left_size="30dp"
        topbar:left_hsize="20dp"
        topbar:title_size="@dimen/title_size"
        ></customUI.TopbarView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"
        />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        >
        <customUI.PullToRefreshView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recover_list"
            android:orientation="vertical"
            android:background="#f5f5f5"
            >
            <ListView
                android:id="@+id/recover_listview"
                android:cacheColorHint="#00000000"
                android:background="#f5f5f5"
                android:divider="#f5f5f5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:dividerHeight="@dimen/y5"
                />
        </customUI.PullToRefreshView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/myorder_ordernone"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="@dimen/x65"
                android:layout_height="@dimen/x75"
                android:background="@drawable/order_none"
                android:layout_marginTop="@dimen/x175"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抱歉，您还没有相关订单"
                android:textSize="@dimen/x13"
                android:textColor="@color/main_sgry"
                android:layout_marginTop="@dimen/x15"
                />
        </LinearLayout>
        <customUI.Loding.ProgressWheel
            android:id="@+id/progress"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y4"
            android:clickable="false"
            android:layout_centerInParent="true"
            wheel:matProg_barColor="#f32d61"
            wheel:matProg_progressIndeterminate="true" />
    </RelativeLayout>
</LinearLayout>
