<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.transtion.my5th.AHomeActivity.SelectresultActivity"
    android:background="#fff"
    xmlns:topbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <customUI.TopbarView
        android:id="@+id/topbar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        topbar:medtitle="选择商品"
        topbar:left_size="30dp"
        topbar:title_size="@dimen/title_size"
        topbar:left_hsize="20dp"
        ></customUI.TopbarView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x8"
        android:paddingBottom="@dimen/x8"
        android:id="@+id/selectresult_layout_top"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="默认"
            android:gravity="center"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x14"
            android:id="@+id/selectresult_moren" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:id="@+id/selectresult_layout_xiaoliang"
            >
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="销量"
            android:textColor="@color/individualblack"
            android:textSize="@dimen/x14"
            android:id="@+id/selectresult_xiaoliang" />
            <ImageView
                android:layout_width="@dimen/x7"
                android:layout_height="match_parent"
                android:src="@drawable/price_up"
                android:id="@+id/selectresult_img_xiaoliang"
                android:layout_marginLeft="@dimen/x3"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:id="@+id/selectresult_layout_price"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/individualblack"
                android:textSize="@dimen/x14"
                android:id="@+id/selectresult_price"
                />

            <ImageView
                android:layout_width="@dimen/x7"
                android:layout_height="match_parent"
                android:src="@drawable/price_up"
                android:id="@+id/selectresult_img_price"
                android:layout_marginLeft="@dimen/x3"
                />
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/main_sgry"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:id="@+id/selectresult_layout_screen"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textColor="@color/individualblack"
                android:textSize="@dimen/x14"
                />

            <ImageView
                android:layout_width="@dimen/x14"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_guai_up"
                android:layout_marginLeft="@dimen/x3"
                android:id="@+id/imageView20" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x37"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x15"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/selectresult_recycle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:background="#fff"

            >

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清空"
            android:textColor="@color/main_sgry"
            android:textSize="@dimen/x14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/selectresult_close"

            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <customUI.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:id="@+id/customScrollview" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <customUI.GridViewForScrollView
                    android:id="@+id/selectresult_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="1dp"
                    android:verticalSpacing="1dp"
                    android:background="#f5f5f5"
                    android:numColumns="2"
                    >
                </customUI.GridViewForScrollView>
                <LinearLayout
                    android:id="@+id/otherfrag_blin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/y10"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x12"
                        android:textColor="#ccc"
                        android:paddingTop="@dimen/y10"
                        android:paddingBottom="@dimen/y10"
                        android:layout_gravity="center"
                        android:text="亲，别拉了，到底了哦 ^_^"
                        />
                </LinearLayout>
            </LinearLayout>
        </customUI.CustomScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/selectresult_selectnone"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/x75"
                android:background="@drawable/bg_search_none"
                android:layout_marginTop="@dimen/x85"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抱歉，没有找到相关的商品"
                android:textSize="@dimen/x13"
                android:textColor="@color/main_sgry"
                android:layout_marginTop="@dimen/x15"
                />
        </LinearLayout>
    </RelativeLayout>
   
</LinearLayout>
