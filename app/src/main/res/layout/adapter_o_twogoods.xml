<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/adapter_o_twogoods_img" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进口食品"
                android:textSize="@dimen/x13"
                android:textColor="@color/individualblack"
                android:id="@+id/adapter_o_twogoods_text" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y17"
                android:gravity="center_vertical"
                android:background="@drawable/xukuang"
                android:layout_marginTop="@dimen/y5"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GO"
                    android:textSize="@dimen/x11"
                    android:textColor="@color/individualblack"
                    android:layout_marginLeft="@dimen/x5"
                    android:id="@+id/textView39" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>