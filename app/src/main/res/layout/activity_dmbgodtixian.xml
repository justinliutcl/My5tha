<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DIndividualActivity.DMBgodtixian"
    android:background="@color/background"
    xmlns:topbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back3x"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="佣金提现"
            android:textColor="#444"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/yjtx_txhis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="提现记录"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x11"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/yjtx_alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="支付宝提现"
                android:textColor="@color/main_color"
                android:textSize="@dimen/medsize" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/yjtx_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="银行卡提现"
                android:textColor="@color/blackinwhite"
                android:textSize="@dimen/medsize" />


        </LinearLayout>

    </LinearLayout>
    <viewpagerindicator.UnderlinePageIndicator
        android:id="@+id/yjtx_indicator"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        ></viewpagerindicator.UnderlinePageIndicator>
    <android.support.v4.view.ViewPager
        android:id="@+id/yjtx_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        ></android.support.v4.view.ViewPager>
</LinearLayout>
