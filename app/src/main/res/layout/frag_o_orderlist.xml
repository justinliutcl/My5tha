<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >
    <customUI.PullToRefreshView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myorder_list"
        android:orientation="vertical"
        android:background="#f5f5f5"
        >
        <ListView
            android:id="@+id/myorder_listview"
            android:cacheColorHint="#00000000"
            android:background="#f5f5f5"
            android:divider="#f5f5f5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="@dimen/y5"
            />
    </customUI.PullToRefreshView>
    <customUI.Loding.ProgressWheel
        android:id="@+id/progress"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/y4"
        android:clickable="false"
        android:layout_centerInParent="true"
        wheel:matProg_barColor="#f32d61"
        wheel:matProg_progressIndeterminate="true" />
</RelativeLayout>