<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#faf7f8"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y9"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物币支付："
            android:textSize="@dimen/x11"
            android:textColor="@color/main_gry"
            android:id="@+id/payline_type" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="￥30"
            android:textSize="@dimen/x11"
            android:textColor="@color/main_gry"
            android:id="@+id/payline_money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付完成"
            android:textSize="@dimen/x11"
            android:textColor="@color/main_sgry"
            android:id="@+id/textView50" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-11-22 15:11:07"
        android:layout_marginTop="@dimen/y5"
        android:textSize="@dimen/x10"
        android:textColor="@color/main_sgry"
        android:id="@+id/payline_time"
        android:layout_marginBottom="@dimen/y9"
        />

</LinearLayout>