<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:zms="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp" >
        <ImageView
            android:id="@+id/ahome_lingdang"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/lingdang"
            android:layout_marginLeft="@dimen/x5"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/ahome_lingdangoval"
            android:visibility="gone"
            android:layout_width="@dimen/x8"
            android:layout_height="@dimen/x8"
            android:layout_marginLeft="@dimen/x13"
            android:background="@drawable/red_oval"
            />
        <TextView
            android:id="@+id/adapter_zyfx_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="第五大街全球购"
            android:textColor="@color/blackinwhite"
            android:textSize="@dimen/title_size" />
        <ImageView
            android:id="@+id/ahome_select"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/shaixuan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x5"
            />
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#ddd"
    />
    <viewpagerindicator.PagerSlidingTabStrip
        android:id="@+id/ahome_indicator"
        android:layout_width="match_parent"
        android:background="#fff"
        zms:pstsShouldExpand="true"

        zms:pstsDividerColor="#fff"

        zms:pstsIndicatorHeight="1dp"
        zms:pstsIndicatorColor="@color/main_color"

        zms:pstsUnderlineHeight="1dp"
        zms:pstsUnderlineColor="#fff"

        zms:zmsTabTextSize="@dimen/x13"
        zms:zmsTabTextColor="@color/blackinwhite"

        zms:zmsSelectedTabTextSize="@dimen/x13"
        zms:zmsSelectedTabTextColor="@color/main_color"


        android:layout_height="@dimen/y35" />
    <android.support.v4.view.ViewPager
        android:id="@+id/ahome_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        ></android.support.v4.view.ViewPager>
</LinearLayout>
