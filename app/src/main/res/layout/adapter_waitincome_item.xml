<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/x10"
            android:textColor="@color/main_gry"
            android:text="来源推广人"
            android:paddingTop="@dimen/x13"
            android:paddingBottom="@dimen/x13"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:id="@+id/adapter_waitincome_name"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/x10"
            android:textColor="@color/main_gry"
            android:text="收入方式"
            android:paddingTop="@dimen/x13"
            android:paddingBottom="@dimen/x13"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/adapter_waitincome_type"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/x10"
            android:textColor="@color/main_gry"
            android:text="来源时间"
            android:paddingTop="@dimen/x13"
            android:paddingBottom="@dimen/x13"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/adapter_waitincome_time"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textSize="@dimen/x10"
            android:textColor="@color/main_color"
            android:text="奖励"
            android:paddingTop="@dimen/x13"
            android:paddingBottom="@dimen/x13"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/adapter_waitincome_money"

            />
    </LinearLayout>
</LinearLayout>