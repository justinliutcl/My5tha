<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.transtion.my5th.BShopcar.ShouyinActivity"
    xmlns:topbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e7e7e7"
    >
    <customUI.TopbarView
        android:id="@+id/topbar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        topbar:medtitle="收银台"
        topbar:left_size="30dp"
        topbar:title_size="@dimen/title_size"
        topbar:left_hsize="20dp"
        ></customUI.TopbarView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="@dimen/x10"
        android:id="@+id/shouyin_layout_pay"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:id="@+id/textView52" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台支付"
            android:textColor="@color/main_gry"
            android:textSize="@dimen/x11"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginBottom="@dimen/x8"
            android:id="@+id/textView61" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:id="@+id/textView63" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:paddingRight="@dimen/x15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物币支付"
                android:textSize="@dimen/x12"
                android:textColor="@color/individualblack"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:textColor="@color/main_color"
                android:textSize="@dimen/x10"
                android:id="@+id/shouyin_gwbmoney"
                />
            <togglebutton.ToggleButton
                android:id="@+id/shouyin_gwbuse"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/x22"
                android:layout_marginLeft="@dimen/x22"
                toggle:ToggleborderWidth="0.5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"

            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x15"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:paddingRight="@dimen/x15"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佣金支付"
                android:textSize="@dimen/x12"
                android:textColor="@color/individualblack"
                android:id="@+id/textView74" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:textColor="@color/main_color"
                android:textSize="@dimen/x10"
                android:id="@+id/shouyin_yongjinmoney" />
            <togglebutton.ToggleButton
                android:id="@+id/shouyin_yongjinuse"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/x22"
                android:layout_marginLeft="@dimen/x22"
                toggle:ToggleborderWidth="0.5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:background="#fff"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:id="@+id/textView81" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方支付"
            android:textColor="@color/main_gry"
            android:textSize="@dimen/x11"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginBottom="@dimen/x8"
            android:id="@+id/textView82" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:id="@+id/textView80" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x10"
            android:paddingLeft="@dimen/x20"
            android:paddingBottom="@dimen/x10"
            android:paddingRight="@dimen/x15"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:id="@+id/shouyin_layout_alipy">
            <ImageView
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/x26"
                android:src="@drawable/icon_pay_zfb2x"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/x8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen"
                    android:text="请选择支付方式"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/bg_radio3x"
                android:id="@+id/shouyin_img_alipy" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x10"
            android:paddingLeft="@dimen/x20"
            android:paddingBottom="@dimen/x10"
            android:paddingRight="@dimen/x15"
            android:background="#ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:id="@+id/shouyin_layout_wepay">
            <ImageView
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/x26"
                android:src="@drawable/icon_pay_wx2x"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/x8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen"
                    android:text="微信支付"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/bg_radio3x"
                android:id="@+id/shouyin_img_wepay" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"
        android:id="@+id/textView77" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x13"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需付款:"
            android:textSize="@dimen/x11"
            android:textColor="@color/main_gry"
            android:id="@+id/textView78" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x14"
            android:layout_marginLeft="@dimen/x5"
            android:id="@+id/shouyin_summoney" />

        <Button
            android:layout_width="@dimen/x123"
            android:layout_height="@dimen/x44"
            android:text="立即支付"
            android:textColor="#fff"
            android:textSize="@dimen/x14"
            android:background="@drawable/buttonback_nooval"
            android:id="@+id/shouyin_commit" />
    </LinearLayout>
</LinearLayout>
