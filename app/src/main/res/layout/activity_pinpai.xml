<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.transtion.my5th.AHomeActivity.PinpaiActivity"
    android:orientation="vertical"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back3x"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌专区"
            android:textColor="#444"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        android:id="@+id/textView28" />
    <customUI.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:id="@+id/customScrollview" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x175"
                android:id="@+id/adapter_jxdx_topimg" />


            <LinearLayout
                android:id="@+id/pinpai_layout_mes"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x10"
                android:visibility="invisible"
                android:background="#fff"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/x82"
                        android:layout_height="@dimen/x42"
                        android:scaleType="fitXY"
                        android:id="@+id/pinpai_brand" />

                    <ImageView
                        android:layout_width="@dimen/x23"
                        android:layout_height="@dimen/x23"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/x10"
                        android:id="@+id/pinpai_city" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asd"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/individualblack"
                        android:layout_marginLeft="@dimen/x10"
                        android:id="@+id/pinpai_title" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew TextNew Text"
                    android:textColor="@color/main_gry"
                    android:textSize="@dimen/x11"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/x5"
                    android:lineSpacingExtra="@dimen/x8"
                    android:id="@+id/pinpai_mes" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x18"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/button_down"
                    android:paddingTop="@dimen/x5"
                    android:id="@+id/pinpai_down" />
            </LinearLayout>

            <customUI.GridViewForScrollView
                android:id="@+id/pinpai_ggrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:background="#f5f5f5"
                android:layout_marginTop="@dimen/x10"
                android:numColumns="2"
                >

            </customUI.GridViewForScrollView>

            <LinearLayout
                android:id="@+id/otherfrag_blin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/y10"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x12"
                    android:textColor="#ccc"
                    android:paddingTop="@dimen/y10"
                    android:paddingBottom="@dimen/y10"
                    android:layout_gravity="center"
                    android:text="亲，别拉了，到底了哦 ^_^"
                    />
            </LinearLayout>
        </LinearLayout>
    </customUI.CustomScrollView>
</LinearLayout>
