<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/right"
    android:padding="@dimen/x10"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pop_select_gouwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物"
                android:textSize="@dimen/minsize"
                android:textColor="@color/main_color"
                android:gravity="center"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:background="@drawable/smsbg_redandwhite"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pop_select_chongzhika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textSize="@dimen/minsize"
                android:textColor="@color/main_color"
                android:gravity="center"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:background="@drawable/smsbg_redandwhite"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pop_select_tixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佣金"
                android:textSize="@dimen/minsize"
                android:textColor="@color/main_color"
                android:gravity="center"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:background="@drawable/smsbg_redandwhite"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pop_select_yongjin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款"
                android:textSize="@dimen/minsize"
                android:textColor="@color/main_color"
                android:gravity="center"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:background="@drawable/smsbg_redandwhite"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>