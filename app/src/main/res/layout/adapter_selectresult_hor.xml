<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/x5"
    android:paddingRight="@dimen/x5"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:id="@+id/adapter_selectresult_hor_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x23"
        android:background="@drawable/grayandwhite_oval"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美迪惠尔"
            android:textSize="@dimen/x14"
            android:textColor="@color/main_sgry"
            android:id="@+id/adapter_selectresult_hor_text" />

        <TextView
            android:layout_width="@dimen/x8"
            android:layout_height="@dimen/x8"
            android:background="@drawable/cha"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x3"
            android:textSize="@dimen/x13"
            android:textColor="@color/main_sgry"
            android:id="@+id/adapter_selectresult_hor_delete" />
    </LinearLayout>
</LinearLayout>