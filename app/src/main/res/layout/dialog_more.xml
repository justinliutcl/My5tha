<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="@dimen/x110"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/icon_morebg"
        android:layout_alignParentRight="true"
        >
        <LinearLayout
            android:id="@+id/dialog_more_2home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x10"
            android:padding="@dimen/x5"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/x24"
                android:background="@drawable/icon_webhome"
                android:layout_marginLeft="@dimen/x5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="回首页"
                android:textColor="#fff"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:background="#fff"
            />
        <LinearLayout
            android:id="@+id/dialog_more_2shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/x5"
            android:gravity="center_vertical"

            >
            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/x24"
                android:background="@drawable/icon_webshop"
                android:layout_marginLeft="@dimen/x5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="购物车"
                android:textColor="#fff"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="#fff"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            />
        <LinearLayout
            android:id="@+id/dialog_more_2individual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="@dimen/x5"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/x24"
                android:background="@drawable/icon_webindividual"
                android:layout_marginLeft="@dimen/x5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="个人中心"
                android:textColor="#fff"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>