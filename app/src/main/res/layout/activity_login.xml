<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mActivity.LoginActivity"
    android:orientation="vertical"
    android:background="@color/background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"

        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:paddingRight="30dp"
            android:src="@drawable/back3x"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册第五大街"
            android:textColor="#444"
            android:textSize="@dimen/title_size"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/register_tologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="登录"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/main_color"
            android:textSize="17dp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:background="#ffffff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_phone2x" />

                    <EditText
                        android:id="@+id/regist_phone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/editsize"
                        android:textColor="@color/blackinwhite"
                        android:textColorHint="@color/hintcolor"
                        android:hint="请输入11位手机号"
                        android:padding="10dp"
                        android:maxLength="11"
                        android:background="#fff"
                        android:inputType="number" >

                    </EditText>
                    <Button
                        android:id="@+id/regist_sendSMS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"
                        android:textSize="@dimen/minsize"
                        android:textColor="#fff"
                        android:minHeight="0dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:minWidth="0dp"
                        android:background="@drawable/smsbuttonback"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayline"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:background="#ffffff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_information2x" />

                    <EditText
                        android:id="@+id/regist_smscode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/editsize"
                        android:textColor="@color/blackinwhite"
                        android:textColorHint="@color/hintcolor"
                        android:hint="获取短信验证码"
                        android:padding="10dp"
                        android:background="#fff"
                        android:inputType="phone" >

                    </EditText>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayline"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:background="#ffffff"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_password2x" />

                    <EditText
                        android:id="@+id/regist_password"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/editsize"
                        android:textColor="@color/blackinwhite"
                        android:textColorHint="@color/hintcolor"
                        android:hint="设置6-16位登录密码"
                        android:padding="10dp"
                        android:maxLength="16"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                        android:background="#fff"
                        android:inputType="textPassword" >

                    </EditText>

                    <togglebutton.ToggleButton
                        android:id="@+id/regist_codeshow"
                        android:layout_width="@dimen/x35"
                        android:layout_height="@dimen/y15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        toggle:borderWidth="0.5dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/regist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonback"
                    android:minHeight="0dp"
                    android:padding="@dimen/buttonpadding"
                    android:gravity="center"
                    android:text="立即注册"
                    android:textColor="#fff"
                    android:textSize="@dimen/button_size" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="80dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/grayline"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用社交账号登录"
                    android:layout_gravity="center"
                    android:textSize="@dimen/individualmedsize"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#999"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/grayline"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="18dp"
                >

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ssdk_oks_skyblue_logo_wechat_checked"
                    android:id="@+id/login_wechat" />
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ssdk_oks_skyblue_logo_sinaweibo_checked"
                    android:layout_marginLeft="17dp"
                    android:id="@+id/login_weibo" />
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ssdk_oks_skyblue_logo_qq_checked"
                    android:layout_marginLeft="17dp"
                    android:id="@+id/login_qq" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
